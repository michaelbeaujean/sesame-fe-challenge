{
  "name": "sesame-fe-challenge",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "build:css": "postcss src/components/*/*.css -o src/index.css",
    "watch:css": "postcss src/components/*/*.css -o src/index.css -w",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch:css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build:css build-js",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-nested": "^4.2.1"
  }
}
